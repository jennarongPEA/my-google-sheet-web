<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Budget กบล. V30 - Professional</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/18.2.0/umd/react.production.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/18.2.0/umd/react-dom.production.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prop-types/15.8.1/prop-types.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/recharts/2.10.3/Recharts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/7.23.5/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;700&display=swap');
        body { font-family: 'Sarabun', sans-serif; background-color: #0F0518; color: #e2e8f0; margin: 0; }
        .scrollbar-thin::-webkit-scrollbar { width: 5px; }
        .scrollbar-thin::-webkit-scrollbar-thumb { background: #475569; border-radius: 10px; }
        .glass-card { background: rgba(30, 11, 46, 0.6); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.05); }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useMemo, useEffect } = React;
        const { BarChart, Bar, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer, Cell, PieChart, Pie, Legend } = window.Recharts;

        // --- แก้ URL ตรงนี้เป็น URL ใหม่ที่ได้จากการ Deploy ---
        const API_BASE_URL = "https://script.google.com/macros/s/AKfycbzNWL7gNtyKRYauSl7OWTcZyffjagXCD-DCdU-rc6pWulsi98yrAWdEbOcoPyJOsSNg/exec";

        const formatCurrency = (v) => new Intl.NumberFormat('th-TH').format(Math.round(v || 0));
        const cleanNum = (v) => parseFloat(String(v || "0").replace(/[^0-9.-]+/g, "")) || 0;
        const Icon = ({ name, className = "" }) => <i data-lucide={name} className={`w-5 h-5 ${className}`}></i>;

        // สี KPI: เขียว (น้อย) -> แดง (มาก/เกินงบ)
        const KPI_LEVELS = [
            { level: 5, label: 'ดีมาก', max: 82.25, color: '#10B981' },
            { level: 4, label: 'ดี', max: 88.16, color: '#84CC16' },
            { level: 3, label: 'ปานกลาง', max: 94.08, color: '#FACC15' },
            { level: 2, label: 'พอใช้', max: 100.00, color: '#F97316' },
            { level: 1, label: 'ปรับปรุง', max: 999, color: '#EF4444' }
        ];

        const GaugeChart = ({ percent }) => {
            const safePercent = Math.min(Math.max(percent || 0, 0), 110);
            return (
                <div className="relative w-[300px] h-[160px] mx-auto overflow-hidden">
                    <ResponsiveContainer width="100%" height={300}>
                        <PieChart>
                            <Pie dataKey="v" startAngle={180} endAngle={0} cx="50%" cy="50%" innerRadius={80} outerRadius={120}
                                data={[{v:82,c:'#10B981'},{v:6,c:'#84CC16'},{v:6,c:'#FACC15'},{v:6,c:'#F97316'},{v:10,c:'#EF4444'}]}>
                                { KPI_LEVELS.map((e, i) => <Cell key={i} fill={e.color} stroke="none"/>) }
                            </Pie>
                        </PieChart>
                    </ResponsiveContainer>
                    <div className="absolute top-[100px] left-1/2 -translate-x-1/2 text-center">
                        <span className="text-4xl font-bold text-white">{safePercent.toFixed(1)}%</span>
                        <p className="text-slate-500 text-[10px] uppercase mt-1">สถานะ: {KPI_LEVELS.find(l => safePercent <= l.max)?.label}</p>
                    </div>
                </div>
            );
        };

        function App() {
            const [activeTab, setActiveTab] = useState('1');
            const [data, setData] = useState([]);
            const [loading, setLoading] = useState(true);

            const menuItems = [
                { id: '1', label: '1. สรุปภาพรวม (7 ประเภท)', sheet: 'ฐานงบทำการ 7 ประเภท ปี 68', icon: 'layout-dashboard' },
                { id: '2', label: '2. ค่าใช้จ่ายดำเนินงาน', sheet: 'ค่าใช้จ่ายในการดำเนินงาน ปี 68', icon: 'briefcase' },
                { id: '3', label: '3. เปรียบเทียบ 68 vs 69', sheet: 'งบปี 69vs68', icon: 'arrow-right-left' },
                { id: '4', label: '4. วิเคราะห์แยกแผนก', sheet: 'ฐานงบทำการ 7 ประเภท ปี 68', icon: 'building-2' }
            ];

            useEffect(() => {
                setLoading(true);
                const currentSheet = menuItems.find(m => m.id === activeTab).sheet;
                fetch(`${API_BASE_URL}?sheet=${encodeURIComponent(currentSheet)}`)
                    .then(r => r.json())
                    .then(d => { setData(d); setLoading(false); })
                    .catch(() => setLoading(false));
            }, [activeTab]);

            useEffect(() => { if (window.lucide) window.lucide.createIcons(); });

            const stats = useMemo(() => {
                if (!data.length) return null;
                // ค้นหาคอลัมน์แบบยืดหยุ่น
                const findKey = (arr) => Object.keys(data[0]).find(k => arr.some(w => k.includes(w))) || "";
                
                const kBudget68 = findKey(["งบประมาณ ประจำปี 2568", "งบตั้งต้น", "งบ 68"]);
                const kActual68 = findKey(["เบิกจ่ายจริง 2568", "เบิกจ่ายจริง", "จ่ายจริง"]);
                const kBudget69 = findKey(["งบประมาณ ประจำปี 2569", "งบ 69"]);

                let b68 = 0, a68 = 0;
                data.forEach(row => {
                    b68 += cleanNum(row[kBudget68]);
                    a68 += cleanNum(row[kActual68]);
                });

                return { budget: b68, actual: a68, percent: b68 > 0 ? (a68 / b68) * 100 : 0, kBudget68, kActual68, kBudget69 };
            }, [data]);

            if (loading) return (
                <div className="min-h-screen bg-[#0F0518] flex items-center justify-center text-amber-500 font-bold animate-pulse">
                    LOADING DATA FROM GOOGLE SHEETS...
                </div>
            );

            return (
                <div className="min-h-screen flex bg-[#0F0518]">
                    {/* SIDEBAR */}
                    <aside className="w-72 bg-[#1A0B2E] border-r border-white/5 flex flex-col p-6 shadow-2xl">
                        <div className="flex items-center gap-4 mb-10">
                            <div className="bg-amber-500 p-2 rounded-xl text-black shadow-lg"><Icon name="wallet" /></div>
                            <h1 className="font-bold text-amber-500 text-lg uppercase">Smart Budget</h1>
                        </div>
                        <nav className="flex-1 space-y-2">
                            {menuItems.map(item => (
                                <button key={item.id} onClick={() => setActiveTab(item.id)}
                                    className={`w-full flex items-center gap-4 p-4 rounded-2xl transition ${activeTab === item.id ? 'bg-purple-900/40 text-white border border-purple-500/30 shadow-lg' : 'text-slate-500 hover:bg-white/5'}`}>
                                    <Icon name={item.icon} />
                                    <div className="text-left"><div className="text-sm font-bold">{item.label}</div></div>
                                </button>
                            ))}
                        </nav>
                    </aside>

                    {/* MAIN CONTENT */}
                    <main className="flex-1 p-10 overflow-y-auto h-screen scrollbar-thin">
                        <header className="mb-10 border-b border-white/5 pb-6">
                            <h2 className="text-3xl font-bold text-white">{menuItems.find(m=>m.id===activeTab).label}</h2>
                            <p className="text-slate-400 text-xs mt-2 uppercase tracking-widest">● LIVE DATA: {menuItems.find(m=>m.id===activeTab).sheet}</p>
                        </header>

                        {activeTab !== '3' ? (
                            <div className="space-y-10">
                                <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
                                    <div className="glass-card p-10 rounded-[40px] shadow-2xl">
                                        <p className="text-slate-400 text-xs uppercase mb-2 font-bold tracking-widest">งบประมาณรวม 2568</p>
                                        <h3 className="text-3xl font-bold text-white mb-8 font-mono">{formatCurrency(stats?.budget)}</h3>
                                        <p className="text-amber-500 text-xs uppercase mb-2 font-bold tracking-widest">เบิกจ่ายจริง (ACTUAL)</p>
                                        <h3 className="text-5xl font-bold text-white font-mono">{formatCurrency(stats?.actual)}</h3>
                                    </div>
                                    <div className="lg:col-span-2 glass-card p-10 rounded-[40px] text-center shadow-xl flex flex-col justify-center">
                                        <h3 className="text-xs font-bold text-slate-400 mb-6 uppercase tracking-widest">ระดับการเบิกจ่ายงบประมาณ (KPI)</h3>
                                        <GaugeChart percent={stats?.percent} />
                                        <div className="flex justify-center gap-2 mt-6">
                                            {KPI_LEVELS.map(l => <div key={l.level} className="text-[9px] px-3 py-1 rounded-full bg-white/5 font-bold" style={{color: l.color}}>{l.label}</div>)}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        ) : null}

                        {/* TABLE SECTION */}
                        <div className="mt-10 glass-card rounded-[30px] overflow-hidden shadow-2xl">
                            <div className="p-6 border-b border-white/5 font-bold text-amber-500 uppercase text-xs tracking-widest">รายละเอียดรายการเบิกจ่าย</div>
                            <div className="overflow-x-auto max-h-[500px] scrollbar-thin">
                                <table className="w-full text-left text-[11px] font-mono">
                                    <thead className="bg-white/5 text-slate-400 sticky top-0">
                                        <tr>
                                            <th className="p-4 border-b border-white/5">#</th>
                                            {data[0] && Object.keys(data[0]).map(k => <th key={k} className="p-4 border-b border-white/5 whitespace-nowrap">{k}</th>)}
                                            {activeTab === '3' && <th className="p-4 border-b border-white/5 text-amber-500 font-bold">ผลต่าง (Diff)</th>}
                                            {activeTab === '3' && <th className="p-4 border-b border-white/5 text-amber-500 font-bold">% เพิ่ม/ลด</th>}
                                        </tr>
                                    </thead>
                                    <tbody className="divide-y divide-white/5 text-slate-300">
                                        {data.map((row, i) => {
                                            const b68 = cleanNum(row[stats?.kBudget68]);
                                            const b69 = cleanNum(row[stats?.kBudget69]);
                                            const diff = b69 - b68;
                                            const percentChange = b68 !== 0 ? (diff / b68) * 100 : 0;
                                            
                                            return (
                                                <tr key={i} className="hover:bg-white/5 transition-colors">
                                                    <td className="p-4 text-slate-600 font-bold">{i+1}</td>
                                                    {Object.values(row).map((v, j) => <td key={j} className="p-4 whitespace-nowrap">{v}</td>)}
                                                    {activeTab === '3' && (
                                                        <React.Fragment>
                                                            <td className={`p-4 font-bold ${diff >= 0 ? 'text-emerald-500' : 'text-red-500'}`}>{formatCurrency(diff)}</td>
                                                            <td className={`p-4 font-bold ${percentChange >= 0 ? 'text-emerald-500' : 'text-red-500'}`}>{percentChange.toFixed(2)}%</td>
                                                        </React.Fragment>
                                                    )}
                                                </tr>
                                            );
                                        })}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </main>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
